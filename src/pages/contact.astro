---
import Layout from '../layouts/Layout.astro';
import { Icon } from 'astro-icon/components';
---

<Layout
  title="Contact Us - Dr Heidi's Mobile Vet"
  description="Contact Dr Heidi's Mobile Veterinary Services in Bundaberg. Call 0418 108 008 for appointments. Located at 65 Bathurst St, Bundaberg Central, QLD. Available 24/7 for emergencies."
  keywords="contact mobile vet Bundaberg, veterinary clinic Bundaberg address, vet phone number Bundaberg, book vet appointment Bundaberg, emergency vet contact"
>
  <!-- Page Header -->
  <section class="pt-0 pb-8 bg-white">
    <div class="container mx-auto px-4 sm:px-6 lg:px-8">
      <div class="bg-brand-yellow rounded-3xl p-8 sm:p-12 lg:p-16 relative overflow-hidden">
        <div class="pointer-events-none absolute inset-0 opacity-[0.08]">
          <Icon name="lucide:paw-print" class="absolute top-4 left-6 w-20 h-20 text-gray-900 rotate-[-12deg]" aria-hidden="true" />
          <Icon name="lucide:paw-print" class="absolute bottom-6 right-6 w-24 h-24 text-gray-900 rotate-[-8deg]" aria-hidden="true" />
        </div>
        <div class="max-w-3xl mx-auto text-center">
          <h1 class="text-3xl sm:text-4xl lg:text-5xl xl:text-6xl font-bold text-gray-900 mb-4 sm:mb-6">
            Contact Our <br /> <span class="text-[#a39507]">Bundaberg Veterinary Team</span>
          </h1>
          <p class="text-lg sm:text-xl text-gray-700 leading-relaxed">
            We're here to help with all your pet care needs. Reach out today for an appointment or emergency assistance.
          </p>
        </div>
      </div>
    </div>
  </section>

  <!-- Contact Information & Form Section -->
  <section class="py-8 bg-white">
    <div class="container mx-auto px-4 sm:px-6 lg:px-8">
      <div class="grid grid-cols-1 lg:grid-cols-3 gap-8 lg:gap-12 mb-12 lg:mb-16">

        <!-- Contact Cards -->
        <div class="lg:col-span-1 space-y-6">
          <!-- Phone -->
          <div class="bg-brand-blue p-6 rounded-xl shadow-md">
            <div class="flex items-start space-x-4">
              <div class="w-12 h-12 bg-primary rounded-lg flex items-center justify-center flex-shrink-0">
                <Icon name="lucide:phone" class="w-6 h-6 text-white" />
              </div>
              <div>
                <h3 class="text-lg font-bold text-gray-900 mb-2">Phone</h3>
                <a href="tel:0418108008" class="text-primary hover:text-primary-600 font-semibold text-base">
                  0418 108 008
                </a>
                <p class="text-sm text-gray-600 mt-2">Call us anytime for assistance</p>
              </div>
            </div>
          </div>

          <!-- Email -->
          <div class="bg-brand-lavender p-6 rounded-xl shadow-md">
            <div class="flex items-start space-x-4">
              <div class="w-12 h-12 bg-secondary rounded-lg flex items-center justify-center flex-shrink-0">
                <Icon name="lucide:mail" class="w-6 h-6 text-white" />
              </div>
              <div>
                <h3 class="text-lg font-bold text-gray-900 mb-2">Email</h3>
                <a href="mailto:info@drheidisvet.com.au" class="text-secondary hover:text-secondary-600 font-semibold text-base break-all">
                  info@drheidisvet.com.au
                </a>
                <p class="text-sm text-gray-600 mt-2">Send us your questions</p>
              </div>
            </div>
          </div>

          <!-- Address -->
          <div class="bg-brand-yellow p-6 rounded-xl shadow-md">
            <div class="flex items-start space-x-4">
              <div class="w-12 h-12 bg-primary rounded-lg flex items-center justify-center flex-shrink-0">
                <Icon name="lucide:map-pin" class="w-6 h-6 text-white" />
              </div>
              <div>
                <h3 class="text-lg font-bold text-gray-900 mb-2">Address</h3>
                <p class="text-gray-700 font-medium">
                  65 Bathurst St<br />
                  Bundaberg Central<br />
                  QLD 4670
                </p>
              </div>
            </div>
          </div>

          <!-- Hours -->
          <div class="bg-brand-pink p-6 rounded-xl shadow-md">
            <div class="flex items-start space-x-4">
              <div class="w-12 h-12 bg-secondary rounded-lg flex items-center justify-center flex-shrink-0">
                <Icon name="lucide:clock" class="w-6 h-6 text-white" />
              </div>
              <div class="flex-1">
                <h3 class="text-lg font-bold text-gray-900 mb-3">Opening Hours</h3>
                <div class="space-y-2 text-sm">
                  <div class="flex justify-between">
                    <span class="text-gray-600">Mon - Fri:</span>
                    <span class="font-semibold text-gray-900">8am - 6pm</span>
                  </div>
                  <div class="flex justify-between">
                    <span class="text-gray-600">Saturday:</span>
                    <span class="font-semibold text-gray-900">Closed</span>
                  </div>
                  <div class="flex justify-between">
                    <span class="text-gray-600">Sunday:</span>
                    <span class="font-semibold text-gray-900">Closed</span>
                  </div>
                  <div class="pt-2 mt-2 border-t border-gray-200">
                    <p class="text-secondary font-semibold">24/7 Emergency Available</p>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>

        <!-- Contact Form -->
        <div class="lg:col-span-2">
          <div class="bg-[#1D2D4E] p-6 sm:p-8 lg:p-10 rounded-xl shadow-lg">
            <h2 class="text-2xl sm:text-3xl font-bold text-white mb-2">
              Send Us a Message
            </h2>
            <p class="text-gray-200 mb-6 sm:mb-8">
              Fill out the form below and we'll get back to you as soon as possible.
            </p>

            <form onsubmit="return false" class="space-y-6">
              <div class="grid grid-cols-1 sm:grid-cols-2 gap-6">
                <div>
                  <label for="name" class="block text-sm font-semibold text-gray-200 mb-2">
                    Your Name *
                  </label>
                  <input
                    type="text"
                    id="name"
                    name="name"
                    required
                    class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-primary focus:border-transparent transition-all"
                    placeholder="John Doe"
                  />
                </div>

                <div>
                  <label for="email" class="block text-sm font-semibold text-gray-200 mb-2">
                    Email Address *
                  </label>
                  <input
                    type="email"
                    id="email"
                    name="email"
                    required
                    class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-primary focus:border-transparent transition-all"
                    placeholder="john@example.com"
                  />
                </div>
              </div>

              <div class="grid grid-cols-1 sm:grid-cols-2 gap-6">
                <div>
                  <label for="phone" class="block text-sm font-semibold text-gray-200 mb-2">
                    Phone Number *
                  </label>
                  <input
                    type="tel"
                    id="phone"
                    name="phone"
                    required
                    class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-primary focus:border-transparent transition-all"
                    placeholder="0418 108 008"
                  />
                </div>

                <div>
                  <label for="pet-type" class="block text-sm font-semibold text-gray-200 mb-2">
                    Pet Type *
                  </label>
                  <select
                    id="pet-type"
                    name="pet-type"
                    required
                    class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-primary focus:border-transparent transition-all"
                  >
                    <option value="">Select pet type</option>
                    <option value="dog">Dog</option>
                    <option value="cat">Cat</option>
                    <option value="rabbit">Rabbit</option>
                    <option value="guinea-pig">Guinea Pig</option>
                    <option value="bird">Bird</option>
                    <option value="horse">Horse</option>
                    <option value="other">Other</option>
                  </select>
                </div>
              </div>

              <div>
                <label for="message" class="block text-sm font-semibold text-gray-200 mb-2">
                  Message *
                </label>
                <textarea
                  id="message"
                  name="message"
                  required
                  rows="6"
                  class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-primary focus:border-transparent transition-all resize-none"
                  placeholder="Please tell us about your pet's needs or any questions you have..."
                ></textarea>
              </div>

              <div class="flex items-start space-x-2">
                <input
                  type="checkbox"
                  id="emergency"
                  name="emergency"
                  class="w-5 h-5 text-primary border-gray-300 rounded focus:ring-primary mt-0.5"
                />
                <label for="emergency" class="text-sm text-gray-200">
                  This is an emergency (for immediate assistance, please call <a href="tel:0418108008" class="text-white font-semibold underline">0418 108 008</a>)
                </label>
              </div>

              <button
                type="submit"
                class="w-full sm:w-auto inline-flex items-center justify-center px-6 sm:px-8 py-3 sm:py-4 bg-white hover:bg-gray-100 text-gray-900 font-semibold rounded-full shadow-lg hover:shadow-xl transition-all text-base sm:text-lg"
              >
                Send Message
                <Icon name="lucide:send" class="w-5 h-5 ml-2" />
              </button>

              <p class="text-sm text-gray-300 mt-4">
                * Required fields. We'll respond to your inquiry within 24 hours during business days.
              </p>
            </form>
          </div>
        </div>
      </div>

      <!-- Map Section -->
      <div class="mb-6">
        <h2 class="text-2xl sm:text-3xl font-bold text-gray-900 mb-6 text-center">
          Find Us in Bundaberg
        </h2>
        <div class="rounded-xl overflow-hidden shadow-lg">
          <iframe
            src="https://www.google.com/maps?q=65%20Bathurst%20St%2C%20Bundaberg%20Central%2C%20QLD%204670&output=embed"
            width="100%"
            height="450"
            style="border:0;"
            allowfullscreen=""
            loading="lazy"
            referrerpolicy="no-referrer-when-downgrade"
            title="Dr Heidi's Mobile Veterinary Services location in Bundaberg"
          ></iframe>
        </div>
        <p class="text-center text-gray-600 mt-4">
          65 Bathurst St, Bundaberg Central, QLD 4670
        </p>
      </div>
    </div>
  </section>

  <!-- Emergency CTA -->
  <section class="pt-4 pb-8 bg-white">
    <div class="container mx-auto px-4 sm:px-6 lg:px-8">
      <div class="bg-gradient-to-r from-secondary to-secondary-600 rounded-3xl p-8 sm:p-12 lg:p-16 text-center">
        <div class="flex items-center justify-center mb-6">
          <div class="relative w-32 h-32 sm:w-40 sm:h-40 lg:w-48 lg:h-48">
            <Icon name="lucide:ambulance" class="w-full h-full text-black" />
            <Icon name="lucide:paw-print" class="absolute right-2 top-1/2 -translate-y-1/2 w-10 h-10 sm:w-12 sm:h-12 lg:w-14 lg:h-14 text-black" />
          </div>
        </div>
        <h2 class="text-2xl sm:text-3xl lg:text-4xl font-bold text-white mb-4">
          Need Emergency Assistance?
        </h2>
        <p class="text-secondary-50 mb-6 max-w-2xl mx-auto text-[1.7rem] leading-[2.1rem]">
          We're available 24/7 for urgent pet care in Bundaberg. Don't wait - call us now.
        </p>
        <a
          href="tel:0418108008"
          class="inline-flex items-center justify-center px-6 sm:px-8 py-3 sm:py-4 bg-gray-900 hover:bg-gray-800 text-white rounded-full font-semibold shadow-lg hover:shadow-xl transition-all text-base sm:text-lg"
        >
          <Icon name="lucide:phone" class="w-4 h-4 lg:w-5 lg:h-5" />
          <span class="hidden lg:inline">Call Now</span>
          <span class="lg:hidden">Call</span>
        </a>
      </div>
    </div>
  </section>
</Layout>
