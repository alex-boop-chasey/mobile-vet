---
import Layout from '../layouts/Layout.astro';
import { Icon } from 'astro-icon/components';
---

<Layout
  title="Contact Us - Dr Heidi's Mobile Vet Bundaberg"
  description="Contact Dr Heidi's Mobile Veterinary Services in Bundaberg. Call 0418 108 008 for appointments. Located at 65 Bathurst St, Bundaberg Central, QLD. Available 24/7 for emergencies."
  keywords="contact mobile vet Bundaberg, veterinary clinic Bundaberg address, vet phone number Bundaberg, book vet appointment Bundaberg, emergency vet contact"
>
  <!-- Page Header -->
  <section class="bg-gradient-to-br from-primary-50 to-secondary-50 py-12 sm:py-16 lg:py-20">
    <div class="container mx-auto px-4 sm:px-6 lg:px-8">
      <div class="max-w-3xl mx-auto text-center">
        <h1 class="text-3xl sm:text-4xl lg:text-5xl font-bold text-gray-900 mb-4 sm:mb-6">
          Contact Our Bundaberg Veterinary Team
        </h1>
        <p class="text-lg sm:text-xl text-gray-700 leading-relaxed">
          We're here to help with all your pet care needs. Reach out today for an appointment or emergency assistance.
        </p>
      </div>
    </div>
  </section>

  <!-- Contact Information & Form Section -->
  <section class="py-12 sm:py-16 lg:py-20 bg-white">
    <div class="container mx-auto px-4 sm:px-6 lg:px-8">
      <div class="grid grid-cols-1 lg:grid-cols-3 gap-8 lg:gap-12 mb-12 lg:mb-16">

        <!-- Contact Cards -->
        <div class="lg:col-span-1 space-y-6">
          <!-- Phone -->
          <div class="bg-gradient-to-br from-primary-50 to-white p-6 rounded-xl shadow-md">
            <div class="flex items-start space-x-4">
              <div class="w-12 h-12 bg-primary rounded-lg flex items-center justify-center flex-shrink-0">
                <Icon name="lucide:phone" class="w-6 h-6 text-white" />
              </div>
              <div>
                <h3 class="text-lg font-bold text-gray-900 mb-2">Phone</h3>
                <a href="tel:0418108008" class="text-primary hover:text-primary-600 font-semibold text-base">
                  0418 108 008
                </a>
                <p class="text-sm text-gray-600 mt-2">Call us anytime for assistance</p>
              </div>
            </div>
          </div>

          <!-- Email -->
          <div class="bg-gradient-to-br from-secondary-50 to-white p-6 rounded-xl shadow-md">
            <div class="flex items-start space-x-4">
              <div class="w-12 h-12 bg-secondary rounded-lg flex items-center justify-center flex-shrink-0">
                <Icon name="lucide:mail" class="w-6 h-6 text-white" />
              </div>
              <div>
                <h3 class="text-lg font-bold text-gray-900 mb-2">Email</h3>
                <a href="mailto:info@drheidisvet.com.au" class="text-secondary hover:text-secondary-600 font-semibold text-base break-all">
                  info@drheidisvet.com.au
                </a>
                <p class="text-sm text-gray-600 mt-2">Send us your questions</p>
              </div>
            </div>
          </div>

          <!-- Address -->
          <div class="bg-gradient-to-br from-primary-50 to-white p-6 rounded-xl shadow-md">
            <div class="flex items-start space-x-4">
              <div class="w-12 h-12 bg-primary rounded-lg flex items-center justify-center flex-shrink-0">
                <Icon name="lucide:map-pin" class="w-6 h-6 text-white" />
              </div>
              <div>
                <h3 class="text-lg font-bold text-gray-900 mb-2">Address</h3>
                <p class="text-gray-700 font-medium">
                  65 Bathurst St<br />
                  Bundaberg Central<br />
                  QLD 4670
                </p>
              </div>
            </div>
          </div>

          <!-- Hours -->
          <div class="bg-gradient-to-br from-secondary-50 to-white p-6 rounded-xl shadow-md">
            <div class="flex items-start space-x-4">
              <div class="w-12 h-12 bg-secondary rounded-lg flex items-center justify-center flex-shrink-0">
                <Icon name="lucide:clock" class="w-6 h-6 text-white" />
              </div>
              <div class="flex-1">
                <h3 class="text-lg font-bold text-gray-900 mb-3">Opening Hours</h3>
                <div class="space-y-2 text-sm">
                  <div class="flex justify-between">
                    <span class="text-gray-600">Mon - Fri:</span>
                    <span class="font-semibold text-gray-900">8am - 6pm</span>
                  </div>
                  <div class="flex justify-between">
                    <span class="text-gray-600">Saturday:</span>
                    <span class="font-semibold text-gray-900">Closed</span>
                  </div>
                  <div class="flex justify-between">
                    <span class="text-gray-600">Sunday:</span>
                    <span class="font-semibold text-gray-900">Closed</span>
                  </div>
                  <div class="pt-2 mt-2 border-t border-gray-200">
                    <p class="text-secondary font-semibold">24/7 Emergency Available</p>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>

        <!-- Contact Form -->
        <div class="lg:col-span-2">
          <div class="bg-gradient-to-br from-gray-50 to-white p-6 sm:p-8 lg:p-10 rounded-xl shadow-lg">
            <h2 class="text-2xl sm:text-3xl font-bold text-gray-900 mb-2">
              Send Us a Message
            </h2>
            <p class="text-gray-600 mb-6 sm:mb-8">
              Fill out the form below and we'll get back to you as soon as possible.
            </p>

            <form action="https://formspree.io/f/YOUR_FORM_ID" method="POST" class="space-y-6">
              <div class="grid grid-cols-1 sm:grid-cols-2 gap-6">
                <div>
                  <label for="name" class="block text-sm font-semibold text-gray-700 mb-2">
                    Your Name *
                  </label>
                  <input
                    type="text"
                    id="name"
                    name="name"
                    required
                    class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-primary focus:border-transparent transition-all"
                    placeholder="John Doe"
                  />
                </div>

                <div>
                  <label for="email" class="block text-sm font-semibold text-gray-700 mb-2">
                    Email Address *
                  </label>
                  <input
                    type="email"
                    id="email"
                    name="email"
                    required
                    class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-primary focus:border-transparent transition-all"
                    placeholder="john@example.com"
                  />
                </div>
              </div>

              <div class="grid grid-cols-1 sm:grid-cols-2 gap-6">
                <div>
                  <label for="phone" class="block text-sm font-semibold text-gray-700 mb-2">
                    Phone Number *
                  </label>
                  <input
                    type="tel"
                    id="phone"
                    name="phone"
                    required
                    class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-primary focus:border-transparent transition-all"
                    placeholder="0418 108 008"
                  />
                </div>

                <div>
                  <label for="pet-type" class="block text-sm font-semibold text-gray-700 mb-2">
                    Pet Type *
                  </label>
                  <select
                    id="pet-type"
                    name="pet-type"
                    required
                    class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-primary focus:border-transparent transition-all"
                  >
                    <option value="">Select pet type</option>
                    <option value="dog">Dog</option>
                    <option value="cat">Cat</option>
                    <option value="rabbit">Rabbit</option>
                    <option value="guinea-pig">Guinea Pig</option>
                    <option value="bird">Bird</option>
                    <option value="horse">Horse</option>
                    <option value="other">Other</option>
                  </select>
                </div>
              </div>

              <div>
                <label for="message" class="block text-sm font-semibold text-gray-700 mb-2">
                  Message *
                </label>
                <textarea
                  id="message"
                  name="message"
                  required
                  rows="6"
                  class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-primary focus:border-transparent transition-all resize-none"
                  placeholder="Please tell us about your pet's needs or any questions you have..."
                ></textarea>
              </div>

              <div class="flex items-start space-x-2">
                <input
                  type="checkbox"
                  id="emergency"
                  name="emergency"
                  class="w-5 h-5 text-primary border-gray-300 rounded focus:ring-primary mt-0.5"
                />
                <label for="emergency" class="text-sm text-gray-600">
                  This is an emergency (for immediate assistance, please call <a href="tel:0418108008" class="text-primary font-semibold">0418 108 008</a>)
                </label>
              </div>

              <button
                type="submit"
                class="w-full sm:w-auto inline-flex items-center justify-center px-8 py-4 bg-primary hover:bg-primary-600 text-white font-semibold rounded-lg shadow-lg hover:shadow-xl transition-all"
              >
                Send Message
                <Icon name="lucide:send" class="w-5 h-5 ml-2" />
              </button>

              <p class="text-sm text-gray-500 mt-4">
                * Required fields. We'll respond to your inquiry within 24 hours during business days.
              </p>
            </form>
          </div>
        </div>
      </div>

      <!-- Map Section -->
      <div class="mb-12">
        <h2 class="text-2xl sm:text-3xl font-bold text-gray-900 mb-6 text-center">
          Find Us in Bundaberg
        </h2>
        <div class="rounded-xl overflow-hidden shadow-lg">
          <iframe
            src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3537.8!2d152.3500!3d-24.8667!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x0%3A0x0!2zMjTCsDUyJzAwLjEiUyAxNTLCsDIxJzAwLjAiRQ!5e0!3m2!1sen!2sau!4v1234567890"
            width="100%"
            height="450"
            style="border:0;"
            allowfullscreen=""
            loading="lazy"
            referrerpolicy="no-referrer-when-downgrade"
            title="Dr Heidi's Mobile Veterinary Services location in Bundaberg"
          ></iframe>
        </div>
        <p class="text-center text-gray-600 mt-4">
          65 Bathurst St, Bundaberg Central, QLD 4670
        </p>
      </div>
    </div>
  </section>

  <!-- Emergency CTA -->
  <section class="py-12 sm:py-16 bg-gradient-to-r from-secondary to-secondary-600">
    <div class="container mx-auto px-4 sm:px-6 lg:px-8 text-center">
      <div class="flex items-center justify-center mb-4">
        <div class="w-16 h-16 bg-white rounded-full flex items-center justify-center">
          <Icon name="lucide:alert-circle" class="w-8 h-8 text-secondary" />
        </div>
      </div>
      <h2 class="text-2xl sm:text-3xl lg:text-4xl font-bold text-white mb-4">
        Need Emergency Assistance?
      </h2>
      <p class="text-lg sm:text-xl text-secondary-50 mb-6 max-w-2xl mx-auto">
        We're available 24/7 for urgent pet care in Bundaberg. Don't wait - call us now.
      </p>
      <a
        href="tel:0418108008"
        class="inline-flex items-center justify-center px-8 py-4 bg-white hover:bg-gray-100 text-secondary font-semibold rounded-lg shadow-lg hover:shadow-xl transition-all text-lg"
      >
        <Icon name="lucide:phone" class="w-6 h-6 mr-2" />
        Call 0418 108 008 Now
      </a>
    </div>
  </section>
</Layout>
