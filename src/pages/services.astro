---
import Layout from '../layouts/Layout.astro';
import { Icon } from 'astro-icon/components';

const services = [
  {
    title: 'Health Consultations',
    description: 'Professional consultations with our caring veterinarians in Bundaberg. We provide thorough examinations and health assessments for your pets with a gentle approach.',
    iconName: 'lucide:stethoscope',
    features: ['Comprehensive health checks', 'Gentle examination approach', 'Detailed health reports', 'Treatment planning'],
    bgColor: 'bg-brand-pink'
  },
  {
    title: 'Diagnostic Services',
    description: 'State-of-the-art diagnostic machines and equipment to accurately assess your pet\'s health and identify any issues quickly and effectively.',
    iconName: 'lucide:scan-line',
    features: ['Advanced diagnostic equipment', 'Quick test results', 'Accurate assessments', 'On-site laboratory'],
    bgColor: 'bg-brand-lime'
  },
  {
    title: 'Mobile Veterinary Care',
    description: 'Convenient mobile veterinary services across Bundaberg and surrounding areas. We bring professional pet care directly to your home.',
    iconName: 'lucide:truck',
    features: ['Home visit services', 'Stress-free for pets', 'Convenient scheduling', 'Bundaberg & surrounding areas'],
    bgColor: 'bg-brand-blue'
  },
  {
    title: 'Pharmaceutical Services',
    description: 'On-site pharmaceutical store with a wide range of medications and treatments available immediately for your pet\'s needs.',
    iconName: 'lucide:pill',
    features: ['Wide medication range', 'Immediate availability', 'Professional guidance', 'Prescription services'],
    bgColor: 'bg-brand-yellow'
  },
  {
    title: 'Multi-Species Care',
    description: 'Expert care for a wide variety of pets including cats, dogs, rabbits, guinea pigs, birds, horses, and even snakes.',
    iconName: 'lucide:paw-print',
    features: ['Cats & dogs', 'Small animals (rabbits, guinea pigs)', 'Birds', 'Horses & exotic pets'],
    bgColor: 'bg-brand-lavender'
  },
  {
    title: 'Emergency Care',
    description: '24/7 emergency assistance for urgent pet health situations in Bundaberg. We\'re always here when you need us most.',
    iconName: 'lucide:siren',
    features: ['24/7 availability', 'Rapid response', 'Critical care expertise', 'Emergency consultations'],
    bgColor: 'bg-brand-pink'
  },
  {
    title: 'Treatment & Consultations',
    description: 'Caring and gentle approach to all treatments and consultations, ensuring your pet feels safe and comfortable throughout.',
    iconName: 'lucide:clipboard-check',
    features: ['Gentle handling', 'Stress-reduction techniques', 'Comfortable environment', 'Clear communication'],
    bgColor: 'bg-brand-lime'
  },
  {
    title: 'Preventive Care',
    description: 'Sound advice and professional recommendations for ongoing health care, helping you make the best decisions for your pet.',
    iconName: 'lucide:shield-plus',
    features: ['Health education', 'Preventive planning', 'Nutrition advice', 'Wellness programs'],
    bgColor: 'bg-brand-blue'
  }
];
---

<Layout
  title="Veterinary Services in Bundaberg - Pet Care Services"
  description="Comprehensive veterinary services in Bundaberg, QLD. Mobile vet care, diagnostics, emergency services, and more. Professional care for cats, dogs, rabbits, birds, and all pets."
  keywords="veterinary services Bundaberg, mobile vet services, emergency vet Bundaberg, pet diagnostics, animal care Bundaberg QLD, pet health services"
>
  <!-- Page Header -->
  <section class="bg-brand-lavender py-12 sm:py-16 lg:py-20">
    <div class="container mx-auto px-4 sm:px-6 lg:px-8">
      <div class="max-w-3xl mx-auto text-center">
        <h1 class="text-3xl sm:text-4xl lg:text-5xl font-bold text-gray-900 mb-4 sm:mb-6">
          Our Pet Care Services in Bundaberg
        </h1>
        <p class="text-lg sm:text-xl text-gray-700 leading-relaxed">
          Modern, professional, and affordable health care for your pets across Bundaberg and surrounding areas
        </p>
      </div>
    </div>
  </section>

  <!-- Services Grid -->
  <section class="py-12 sm:py-16 lg:py-20 bg-white">
    <div class="container mx-auto px-4 sm:px-6 lg:px-8">
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-2 gap-6 lg:gap-8">
        {services.map((service) => (
          <div class={`${service.bgColor} p-6 sm:p-8 rounded-2xl shadow-md hover:shadow-xl transition-all hover:-translate-y-1`}>
            <div class="flex items-start space-x-4">
              <div class="w-12 h-12 sm:w-14 sm:h-14 bg-gray-900 rounded-full flex items-center justify-center flex-shrink-0">
                <Icon name={service.iconName} class="w-6 h-6 sm:w-7 sm:h-7 text-white" />
              </div>
              <div class="flex-1">
                <h3 class="text-lg sm:text-xl font-bold text-gray-900 mb-2">{service.title}</h3>
                <p class="text-sm sm:text-base text-gray-700 mb-4 leading-relaxed">
                  {service.description}
                </p>
                <ul class="space-y-2">
                  {service.features.map(feature => (
                    <li class="flex items-start space-x-2 text-sm text-gray-700">
                      <Icon name="lucide:check" class="w-5 h-5 text-gray-900 flex-shrink-0 mt-0.5" />
                      <span>{feature}</span>
                    </li>
                  ))}
                </ul>
              </div>
            </div>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- Service Highlights -->
  <section class="py-12 sm:py-16 lg:py-20 bg-brand-yellow">
    <div class="container mx-auto px-4 sm:px-6 lg:px-8">
      <div class="max-w-4xl mx-auto bg-white/25 rounded-[2.5rem] p-8 sm:p-10 lg:p-12">
        <h2 class="text-2xl sm:text-3xl lg:text-4xl font-bold text-gray-900 mb-8 sm:mb-12 text-center">
          Why Choose Our Services in Bundaberg?
        </h2>

        <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-6 lg:gap-8">
          <div class="text-center">
            <div class="w-16 h-16 bg-gray-900 rounded-full flex items-center justify-center mx-auto mb-4">
              <Icon name="lucide:user-round-check" class="w-8 h-8 text-white" />
            </div>
            <h3 class="text-lg font-bold text-gray-900 mb-2">Professional Expertise</h3>
            <p class="text-sm text-gray-900">
              Leading veterinarians passionate about pet care
            </p>
          </div>

          <div class="text-center">
            <div class="w-16 h-16 bg-gray-900 rounded-full flex items-center justify-center mx-auto mb-4">
              <Icon name="lucide:wallet" class="w-8 h-8 text-white" />
            </div>
            <h3 class="text-lg font-bold text-gray-900 mb-2">Affordable Pricing</h3>
            <p class="text-sm text-gray-900">
              Quality care that fits your budget
            </p>
          </div>

          <div class="text-center">
            <div class="w-16 h-16 bg-gray-900 rounded-full flex items-center justify-center mx-auto mb-4">
              <Icon name="lucide:map-pin" class="w-8 h-8 text-white" />
            </div>
            <h3 class="text-lg font-bold text-gray-900 mb-2">Local to Bundaberg</h3>
            <p class="text-sm text-gray-900">
              Serving the Bundaberg community for years
            </p>
          </div>

          <div class="text-center">
            <div class="w-16 h-16 bg-gray-900 rounded-full flex items-center justify-center mx-auto mb-4">
              <Icon name="lucide:microscope" class="w-8 h-8 text-white" />
            </div>
            <h3 class="text-lg font-bold text-gray-900 mb-2">Fully Equipped</h3>
            <p class="text-sm text-gray-900">
              Modern facilities and equipment
            </p>
          </div>

          <div class="text-center">
            <div class="w-16 h-16 bg-gray-900 rounded-full flex items-center justify-center mx-auto mb-4">
              <Icon name="lucide:heart-pulse" class="w-8 h-8 text-white" />
            </div>
            <h3 class="text-lg font-bold text-gray-900 mb-2">24/7 Emergency</h3>
            <p class="text-sm text-gray-900">
              Always here when you need us
            </p>
          </div>

          <div class="text-center">
            <div class="w-16 h-16 bg-gray-900 rounded-full flex items-center justify-center mx-auto mb-4">
              <Icon name="lucide:heart-handshake" class="w-8 h-8 text-white" />
            </div>
            <h3 class="text-lg font-bold text-gray-900 mb-2">Gentle Approach</h3>
            <p class="text-sm text-gray-900">
              Caring treatment your pets deserve
            </p>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- CTA Section -->
  <section class="py-12 sm:py-16 lg:py-20 bg-brand-lime">
    <div class="container mx-auto px-4 sm:px-6 lg:px-8 text-center">
      <h2 class="text-2xl sm:text-3xl lg:text-4xl font-bold text-gray-900 mb-4 sm:mb-6">
        Ready to Book Your Pet's Appointment?
      </h2>
      <p class="text-lg sm:text-xl text-gray-700 mb-6 sm:mb-8 max-w-2xl mx-auto">
        Contact us today to schedule a consultation or for emergency assistance in Bundaberg
      </p>
      <div class="flex flex-col sm:flex-row gap-4 justify-center">
        <a
          href="/contact"
          class="inline-flex items-center justify-center px-6 sm:px-8 py-3 sm:py-4 bg-gray-900 hover:bg-gray-800 text-white font-semibold rounded-full shadow-lg hover:shadow-xl transition-all"
        >
          Book Appointment
        </a>
        <a
          href="tel:0418108008"
          class="inline-flex items-center justify-center px-6 sm:px-8 py-3 sm:py-4 bg-white hover:bg-gray-50 text-gray-900 font-semibold rounded-full shadow-lg hover:shadow-xl transition-all"
        >
          <Icon name="lucide:phone" class="w-5 h-5 mr-2" />
          Call 0418 108 008
        </a>
      </div>
    </div>
  </section>
</Layout>
