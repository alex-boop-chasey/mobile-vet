---
import Layout from '../layouts/Layout.astro';
import { Icon } from 'astro-icon/components';

const upcomingTopics = [
  {
    title: 'Pet Care Tips for Bundaberg Summers',
    description: 'How to keep your pets cool and safe during hot Queensland summers',
    category: 'Seasonal Care',
    iconName: 'lucide:sun'
  },
  {
    title: 'Understanding Pet Vaccinations',
    description: 'Essential vaccination schedules for dogs and cats in Bundaberg',
    category: 'Health & Wellness',
    iconName: 'lucide:shield-check'
  },
  {
    title: 'Signs Your Pet Needs Emergency Care',
    description: 'When to call your Bundaberg mobile vet for urgent assistance',
    category: 'Emergency',
    iconName: 'lucide:alert-circle'
  },
  {
    title: 'Nutrition Guide for Senior Pets',
    description: 'Best dietary practices for aging cats and dogs',
    category: 'Nutrition',
    iconName: 'lucide:heart'
  },
  {
    title: 'Benefits of Mobile Vet Services',
    description: 'Why mobile veterinary care is perfect for Bundaberg pet owners',
    category: 'Mobile Services',
    iconName: 'lucide:truck'
  },
  {
    title: 'Dental Care for Pets',
    description: 'Maintaining your pet\'s oral health in Bundaberg',
    category: 'Dental Health',
    iconName: 'lucide:smile'
  }
];
---

<Layout
  title="Pet Care Blog - Dr Heidi's Mobile Vet"
  description="Coming soon: Pet care tips, health advice, and veterinary insights for Bundaberg pet owners. Stay tuned for helpful articles from Dr Heidi's Mobile Veterinary Services."
  keywords="pet care blog Bundaberg, veterinary tips, pet health articles, Bundaberg pet advice, dog care tips, cat care guide"
>
  <!-- Page Header -->
  <section class="pt-0 pb-8 bg-white">
    <div class="container mx-auto px-4 sm:px-6 lg:px-8">
      <div class="bg-brand-lime rounded-3xl p-8 sm:p-12 lg:p-16 relative overflow-hidden">
        <div class="pointer-events-none absolute inset-0 opacity-[0.08]">
          <Icon name="lucide:paw-print" class="absolute top-4 left-6 w-20 h-20 text-gray-900 rotate-[-12deg]" aria-hidden="true" />
          <Icon name="lucide:paw-print" class="absolute bottom-6 right-6 w-24 h-24 text-gray-900 rotate-[-8deg]" aria-hidden="true" />
        </div>
        <div class="max-w-3xl mx-auto text-center">
          <h1 class="text-3xl sm:text-4xl lg:text-5xl xl:text-6xl font-bold text-gray-900 mb-4 sm:mb-6">
            Pet Care <span class="text-[#31804F]">Blog</span>
          </h1>
          <p class="text-lg sm:text-xl text-gray-700 leading-relaxed">
            Expert advice and helpful tips for Bundaberg pet owners
          </p>
        </div>
      </div>
    </div>
  </section>

  <!-- Coming Soon Section -->
  <section class="pt-8 pb-4 bg-white">
    <div class="container mx-auto px-4 sm:px-6 lg:px-8">
      <div class="max-w-4xl mx-auto">
        <!-- Main Notice -->
        <div class="text-center mb-24">
          <div class="w-20 h-20 bg-primary rounded-full flex items-center justify-center mx-auto mb-6">
            <Icon name="lucide:book-open" class="w-10 h-10 text-white" />
          </div>
          <h2 class="text-2xl sm:text-3xl lg:text-4xl font-bold text-gray-900 mb-4">
            Our Blog is Coming Soon!
          </h2>
          <p class="text-base sm:text-lg text-gray-600 leading-relaxed max-w-2xl mx-auto mb-4">
            We're working on creating valuable content to help Bundaberg pet owners care for their beloved companions. Check back soon for expert veterinary advice, seasonal tips, and pet health insights.
          </p>
        </div>

        <!-- Upcoming Topics -->
        <div class="mb-12">
          <h2 class="text-2xl sm:text-3xl font-bold text-gray-900 mb-8 text-center">
            Upcoming Blog Topics
          </h2>
          <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
            {upcomingTopics.map((topic, index) => (
              <div class={`${index % 4 === 0 ? 'bg-brand-yellow' : index % 4 === 1 ? 'bg-brand-lime' : index % 4 === 2 ? 'bg-brand-blue' : 'bg-brand-lavender'} p-6 rounded-xl shadow-md hover:shadow-lg transition-shadow`}>
                <div class="flex items-start space-x-4">
                  <div class={`w-12 h-12 ${index % 2 === 0 ? 'bg-primary' : 'bg-secondary'} rounded-lg flex items-center justify-center flex-shrink-0`}>
                    <Icon name={topic.iconName} class="w-6 h-6 text-white" />
                  </div>
                  <div class="flex-1">
                    <div class={`inline-block px-3 py-1 ${index % 2 === 0 ? 'bg-primary-100 text-primary-700' : 'bg-secondary-100 text-secondary-700'} text-xs font-semibold rounded-full mb-2`}>
                      {topic.category}
                    </div>
                    <h3 class="text-lg font-bold text-gray-900 mb-2">{topic.title}</h3>
                    <p class="text-sm text-gray-600">{topic.description}</p>
                  </div>
                </div>
              </div>
            ))}
          </div>
        </div>

        <!-- Newsletter Signup Placeholder -->
        <div class="bg-[#1D2D4E] p-8 sm:p-10 rounded-2xl shadow-xl text-center">
          <h3 class="text-2xl sm:text-3xl font-bold text-white mb-4">
            Stay Updated
          </h3>
          <p class="text-base sm:text-lg text-white mb-6 max-w-2xl mx-auto">
            Want to be notified when we publish new pet care articles? Contact us to join our mailing list for helpful tips and updates from Dr Heidi's Mobile Veterinary Services in Bundaberg.
          </p>
          <a
            href="/contact"
            class="inline-flex items-center justify-center px-6 sm:px-8 py-3 sm:py-4 bg-white hover:bg-gray-50 text-gray-900 font-semibold rounded-full shadow-lg hover:shadow-xl transition-all text-base sm:text-lg"
          >
            Get in Touch
            <Icon name="lucide:arrow-right" class="w-5 h-5 ml-2" />
          </a>
        </div>
      </div>
    </div>
  </section>

  <!-- Quick Tips Section -->
  <section class="pt-4 pb-8 bg-white">
    <div class="container mx-auto px-4 sm:px-6 lg:px-8">
      <div class="bg-gradient-to-br from-secondary-50 to-white rounded-3xl p-6 sm:p-8 lg:p-10">
        <div class="max-w-4xl mx-auto">
          <h2 class="text-2xl sm:text-3xl font-bold text-gray-900 mb-8 text-center">
            Quick Pet Care Tips <br /> For Bundaberg Owners
          </h2>
          <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-6">
          <div class="bg-brand-yellow p-6 rounded-xl shadow-md">
              <div class="w-12 h-12 bg-black rounded-full flex items-center justify-center mb-4">
                <span class="text-white font-bold text-xl">1</span>
              </div>
              <h3 class="text-lg font-bold text-gray-900 mb-2">Regular Check-ups</h3>
              <p class="text-sm text-gray-600">Schedule annual veterinary visits to catch health issues early.</p>
            </div>

          <div class="bg-brand-lime p-6 rounded-xl shadow-md">
              <div class="w-12 h-12 bg-black rounded-full flex items-center justify-center mb-4">
                <span class="text-white font-bold text-xl">2</span>
              </div>
              <h3 class="text-lg font-bold text-gray-900 mb-2">Stay Hydrated</h3>
              <p class="text-sm text-gray-600">Ensure fresh water is always available, especially in Bundaberg's warm climate.</p>
            </div>

          <div class="bg-brand-blue p-6 rounded-xl shadow-md">
              <div class="w-12 h-12 bg-black rounded-full flex items-center justify-center mb-4">
                <span class="text-white font-bold text-xl">3</span>
              </div>
              <h3 class="text-lg font-bold text-gray-900 mb-2">Parasite Prevention</h3>
              <p class="text-sm text-gray-600">Keep up with flea, tick, and worming treatments year-round.</p>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- CTA Section -->
  <section class="py-8 bg-white">
    <div class="container mx-auto px-4 sm:px-6 lg:px-8 text-center">
      <h2 class="text-2xl sm:text-3xl lg:text-4xl font-bold text-gray-900 mb-4">
        Have Questions About Pet Care?
      </h2>
      <p class="text-lg sm:text-xl text-gray-600 mb-8 max-w-2xl mx-auto">
        Don't wait for our blog - contact our Bundaberg veterinary team today for expert advice and professional care.
      </p>
      <div class="flex flex-col sm:flex-row gap-4 justify-center">
        <a
          href="/contact"
          class="inline-flex items-center justify-center px-6 sm:px-8 py-3 sm:py-4 bg-gray-900 hover:bg-gray-800 text-white font-semibold rounded-full shadow-lg hover:shadow-xl transition-all text-base sm:text-lg"
        >
          Contact Us
        </a>
        <a
          href="tel:0418108008"
          class="inline-flex items-center justify-center px-6 sm:px-8 py-3 sm:py-4 bg-gray-900 hover:bg-gray-800 text-white font-semibold rounded-full shadow-lg hover:shadow-xl transition-all text-base sm:text-lg"
        >
          <Icon name="lucide:phone" class="w-5 h-5 mr-2" />
          Call Now
        </a>
      </div>
    </div>
  </section>
</Layout>
